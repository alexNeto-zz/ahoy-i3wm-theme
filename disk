#!/bin/bash

MEM=$(df -h | grep /dev/sda1 | cut -b29-31)
SUFIX=$(df -h | grep /dev/sda1 | cut -b32)

if [ $SUFIX == "G" ]
then 
	SUFIX=GiB
elif [ $SUFIX == "M" ]
then 
	SUFIX=MiB
elif [ $SUFIX == "k" ]
then
	SUFIX=kiB
fi

if [ $MEM -lt 30 -o $SUFIX != "GiB" ]
then
	# dark theme
	# echo "<span color='#fc5050'>   $MEM $SUFIX  </span>"
	# light theme
	echo "<span color='#772121'>   $MEM $SUFIX  </span>"
else
	# dark theme
	# echo "<span color='#2afc98'>   $MEM $SUFIX  </span>"
	# light theme
	echo "<span color='#21773a'>   $MEM $SUFIX  </span>"
fi
