#!/bin/bash


SIG=$(iwconfig wlp5s0b1 | grep -i quality | cut -b24-25)
POWER=$(iwconfig wlp5s0b1 | grep -i Power= | cut -b65-67)


if [ $POWER -n  "off" ]
then
	if [ $SIG -lt 20 ]
	then
		# dark theme
		# echo "<span color='#fc5050'> </span>"
		# light theme
		echo "<span color='#772121'> </span>"
	elif [ $SIG -gt 55 ]
	then
		# dark theme
		# echo "<span color='#2afc98'> </span>"
		# light theme
		echo "<span color='#21773a'> </span>"
	else
		# dark theme
		# echo "<span color='#f5fc2a'> </span>"
		# light theme
		echo "<span color='#8a8721'> </span>"
	fi
fi
